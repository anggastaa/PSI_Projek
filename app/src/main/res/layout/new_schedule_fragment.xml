<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_constraintCircleRadius="16dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.schedule.NewScheduleFragment">
    
    <ImageView
        android:id="@+id/iv_view_open_close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:src="@drawable/ic_view_open_close"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="28dp"
        android:layout_marginTop="24dp"
        android:fontFamily="@font/roboto"
        android:text="Nama"
        android:textColor="@color/black"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/iv_view_open_close" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/edt_name"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginHorizontal="36dp"
        android:hint="Deskripsi"
        app:hintEnabled="true"
        app:hintTextColor="@color/blue"
        app:boxBackgroundColor="@color/white"
        app:layout_constraintStart_toEndOf="@id/tv_name"
        app:layout_constraintTop_toTopOf="@id/tv_name"
        app:layout_constraintBottom_toBottomOf="@id/tv_name"
        app:layout_constraintEnd_toEndOf="parent">
        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </com.google.android.material.textfield.TextInputLayout>

    <TextView
        android:id="@+id/tv_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="Jam"
        android:textSize="24sp"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="@id/tv_name"
        app:layout_constraintTop_toBottomOf="@id/tv_name"/>
    
    <TextView
        android:id="@+id/tv_hour"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="42dp"
        android:textSize="24sp"
        android:text="00"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="@id/edt_name"
        app:layout_constraintTop_toTopOf="@id/tv_time"
        app:layout_constraintBottom_toBottomOf="@id/tv_time"
        app:layout_constraintEnd_toStartOf="@id/view_separator_hour_minute"/>

    <View
        android:id="@+id/view_separator_hour_minute"
        android:layout_width="16dp"
        android:layout_height="2dp"
        android:background="@color/black"
        app:layout_constraintStart_toEndOf="@id/tv_hour"
        app:layout_constraintTop_toTopOf="@id/tv_hour"
        app:layout_constraintEnd_toStartOf="@id/tv_minute"
        app:layout_constraintBottom_toBottomOf="@id/tv_hour"/>

    <TextView
        android:id="@+id/tv_minute"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="42dp"
        android:textSize="24sp"
        android:text="00"
        android:textColor="@color/black"
        app:layout_constraintStart_toEndOf="@id/view_separator_hour_minute"
        app:layout_constraintEnd_toEndOf="@id/edt_name"
        app:layout_constraintTop_toTopOf="@id/view_separator_hour_minute"
        app:layout_constraintBottom_toBottomOf="@id/view_separator_hour_minute"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_set_time"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="72dp"
        android:layout_marginTop="56dp"
        android:text="Atur Waktu"
        android:textAllCaps="false"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_time"
        app:layout_constraintEnd_toEndOf="parent"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_add"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Tambahkan"
        android:textAllCaps="false"
        app:layout_constraintStart_toStartOf="@id/btn_set_time"
        app:layout_constraintTop_toBottomOf="@id/btn_set_time"
        app:layout_constraintEnd_toEndOf="@id/btn_set_time"/>


</androidx.constraintlayout.widget.ConstraintLayout>